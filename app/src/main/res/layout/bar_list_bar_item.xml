<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/bar_divider"
            android:background="@drawable/person_button_selector"
            android:clickable="true"
            android:focusable="true"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/bar_name_tv1"
                style="@style/BarItemTextView"
                android:layout_toStartOf="@id/bar_sign_iv1"
                android:text="Summer Pockets" />

            <ImageView
                android:id="@+id/bar_level_iv1"
                style="@style/BarItemImageView"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_level_12" />

            <ImageView
                android:id="@+id/bar_sign_iv1"
                style="@style/BarItemImageView"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/bar_level_iv1"
                android:src="@drawable/icon_ba_sign_n" />
        </RelativeLayout>

        <View
            android:id="@+id/bar_divider"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@color/colorBarDivider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/bar_divider"
            android:background="@drawable/person_button_selector"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="15dp">


            <TextView
                android:id="@+id/bar_name_tv2"
                style="@style/BarItemTextView"
                android:layout_toStartOf="@id/bar_sign_iv2"
                android:text="Summer Pockets" />

            <ImageView
                android:id="@+id/bar_level_iv2"
                style="@style/BarItemImageView"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_level_12" />

            <ImageView
                android:id="@+id/bar_sign_iv2"
                style="@style/BarItemImageView"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/bar_level_iv2"
                android:src="@drawable/icon_ba_sign_n" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBarDivider" />
</LinearLayout>