<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:background="@drawable/person_button_selector"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/person_list_item_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_mine_list_collect" />

        <TextView
            android:id="@+id/person_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/person_list_item_iv"
            android:text="我的收藏"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/person_list_item_arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_arrow12_gray60_right" />

        <LinearLayout
            android:id="@+id/person_list_item_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/person_list_item_arrow"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/icon_gift_my_tdou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/item_divider_slim"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider" />

    <View
        android:id="@+id/item_divider_fat"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colorDivider"
        android:visibility="gone" />
</LinearLayout>